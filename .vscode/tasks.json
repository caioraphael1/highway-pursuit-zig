{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zig Build (debug) -> Run",
            "type": "shell",
            "group": "build",
            "command": "zig",
            "windows": {
                "args": [
                    "build",
                    "-Doptimize=Debug",
                    "-Dtarget=\"x86_64-windows\"",
                    "-p",
                    "zig-out/debug/x86_64-windows",
                    "run"
                ]
            },
            "isBackground": false,
            "problemMatcher": [
                "$zig",
                "$gcc",
            ],
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "tools",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
