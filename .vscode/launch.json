{
    "version": "0.2.0",
    "configurations": [

        // Launch Debug
        {
            "name": "Zig Build (debug) -> Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Build (Debug)",
            "cwd": "${workspaceFolder}\\zig-out",
            "program": "${workspaceFolder}\\zig-out\\debug\\x86_64-windows\\bin\\${workspaceFolderBasename}.exe",
            "args": [],
            "environment": [],
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "presentation": {
                "hidden": false,
                "group": "debug",
                "order": 1,
            },
            "logging": {
                "engineLogging": false,
                "exceptions": true,
                "moduleLoad": true,
                "processExit": true,
                "programOutput": true,
                "threadExit": false,
            },
        },

        // Launch Release
        {
            "name": "Zig Build (release) -> Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\zig-out\\release\\x86_64-windows\\bin\\${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\zig-out",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build (Release)",
            "presentation": {
                "hidden": false,
                "group": "release",
                "order": 1
            },
        },
    ]
}
